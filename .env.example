
# =============================================================================
# SPORTS BETTING API - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and update the values according to your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=sportsbetting_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dev_password_123
POSTGRES_EXTERNAL_PORT=5433
POSTGRES_CONTAINER_NAME=sportsbetting_postgres_dev
POSTGRES_VOLUME_NAME=sportsbetting_postgres_data_dev

# Database connection string for the API
DATABASE_URL=Host=postgres;Database=sportsbetting_dev;Username=postgres;Password=dev_password_123;Port=5432

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_PORT=5002
API_CONTAINER_NAME=sportsbetting_api_dev

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your-256-bit-secret-key-here-minimum-32-characters-required

DB_HOST=localhost
DB_NAME=sportsbetting
DB_USER=postgres
DB_PASSWORD=your-secure-database-password

INITIAL_BALANCE=1000.00


MAX_BET_AMOUNT=10000
MIN_BET_AMOUNT=1
BETTING_CLOSE_TIME_MINUTES=15


JWT_ISSUER=SportsBettingAPI
JWT_AUDIENCE=SportsBettingUsers
JWT_EXPIRATION_DAYS=7


LOG_LEVEL=Information
EF_LOG_LEVEL=Warning


ALLOWED_HOSTS=localhost;yourdomain.com


# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
NETWORK_NAME=sportsbetting_network_dev

# =============================================================================
# PGADMIN CONFIGURATION (Optional)
# =============================================================================
PGADMIN_VOLUME_NAME=sportsbetting_pgadmin_data_dev

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DETAILED_ERRORS=true
ENABLE_SWAGGER=true

# =============================================================================
# PRODUCTION NOTES
# =============================================================================
# For production deployment:
# - Change all "_dev" suffixes to "_prod"
# - Update API_PORT to avoid conflicts (currently set to 5002)
# - Use stronger passwords and secrets
# - Set LOG_LEVEL=Warning or Error
# - Set DETAILED_ERRORS=false
# - Set ENABLE_SWAGGER=false

